{
  "name": "luminary",
  "version": "0.0.3",
  "description": "AI Assistant Pipeline Builder - Create, connect, and orchestrate AI workflows",
  "author": {
    "name": "Jacob Clark"
  },
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve": "ng build && electron .",
    "electron:dev": "concurrently \"ng serve\" \"electron electron/main-dev.js\"",
    "electron:build": "ng build && electron-builder",
    "electron:build:win": "ng build && electron-builder --win",
    "electron:build:win:debug": "ng build && electron-builder --win -c.asar=false",
    "electron:build:mac": "ng build && electron-builder --mac"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.34.3",
    "codemirror": "^6.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "highlight.js": "^11.9.0",
    "litegraph.js": "^0.7.18",
    "marked": "^10.0.0",
    "normalize.css": "^8.0.1",
    "openai": "4.57.2",
    "primeicons": "^6.0.1",
    "primeng": "^17.0.0-beta.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular/cli": "^17.0.1",
    "@angular/compiler-cli": "^17.0.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.9.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.2"
  },
  "build": {
    "appId": "com.luminary.app",
    "productName": "Luminary",
    "directories": {
      "output": "release"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json",
          "electron/**/*"
        ]
      },
      {
        "from": "dist/luminary/browser",
        "to": "dist/browser",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "app-icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "app-icon.png"
    }
  }
}
